@model TalentoPlus.Web.Models.EmpleadoFormViewModel
@{
    ViewData["Title"] = "Nuevo Empleado";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Agregar Nuevo Empleado</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <h5 class="mb-3">Información Personal</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Empleado.Documento" class="control-label"></label>
                    <input asp-for="Empleado.Documento" class="form-control" placeholder="Ej: 123456789" required />
                    <span asp-validation-for="Empleado.Documento" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Empleado.Email" class="control-label"></label>
                    <input asp-for="Empleado.Email" type="email" class="form-control" placeholder="nombre@empresa.com" required />
                    <span asp-validation-for="Empleado.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Empleado.Nombres" class="control-label"></label>
                    <input asp-for="Empleado.Nombres" class="form-control" required />
                    <span asp-validation-for="Empleado.Nombres" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Empleado.Apellidos" class="control-label"></label>
                    <input asp-for="Empleado.Apellidos" class="form-control" required />
                    <span asp-validation-for="Empleado.Apellidos" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.FechaNacimiento" class="control-label">Fecha Nacimiento</label>
                    <input asp-for="Empleado.FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="Empleado.FechaNacimiento" class="text-danger"></span>
                </div>
                 <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.Telefono" class="control-label"></label>
                    <input asp-for="Empleado.Telefono" class="form-control" />
                    <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
                </div>
                 <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.Direccion" class="control-label"></label>
                    <input asp-for="Empleado.Direccion" class="form-control" />
                    <span asp-validation-for="Empleado.Direccion" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <h5 class="mb-3">Información Laboral</h5>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.DepartamentoId" class="control-label">Departamento</label>
                    <select asp-for="Empleado.DepartamentoId" asp-items="Model.Departamentos" class="form-control">
                        <option value="">-- Seleccione --</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.CargoId" class="control-label">Cargo</label>
                    <select asp-for="Empleado.CargoId" asp-items="Model.Cargos" class="form-control">
                        <option value="">-- Seleccione --</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.NivelEducativoId" class="control-label">Nivel Educativo</label>
                    <select asp-for="Empleado.NivelEducativoId" asp-items="Model.NivelesEducativos" class="form-control">
                        <option value="">-- Seleccione --</option>
                    </select>
                </div>
            </div>

             <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.Salario" class="control-label"></label>
                    <input asp-for="Empleado.Salario" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Empleado.Salario" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.FechaIngreso" class="control-label">Fecha Ingreso</label>
                    <input asp-for="Empleado.FechaIngreso" type="date" class="form-control" />
                    <span asp-validation-for="Empleado.FechaIngreso" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Empleado.Estado" class="control-label"></label>
                    <select asp-for="Empleado.Estado" asp-items="Model.Estados" class="form-control"></select>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Empleado.PerfilProfesional" class="control-label"></label>
                <textarea asp-for="Empleado.PerfilProfesional" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Empleado.PerfilProfesional" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary mr-2">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>
